package mypackage;

class KthSmallst{
	int kthSmallst(int arr[],int l,int r, int k){
		if(k > 0 && k <= l+1) {
			int pos = randomPartition(arr,l,r);
			if(pos - l == k - 1) 
				return arr[pos];
				if(pos - 1 > k-1) 
					return kthSmallst(arr,1,pos-1,k);
					return kthSmallst(arr,pos+1,r,k-pos+l-1);
				
			
		}
		return Integer.MAX_VALUE;
		
	}

	 
	void swap(int arr[],int i,int j) {
		int temp = arr[i];
		arr[i] = arr[j];
		arr[j] = temp;
	}

int randomPartition(int[] arr, int l, int r) {
	// TODO Auto-generated method stub
	int x = arr[r], i = l;
	for(int j = l; j<=r-1;j++) {
		if(arr[j]<=x) {
			swap(arr,i,j);
			i++;
		}
	}
}
